#!/bin/bash

(
	flock -x 9
	A=$(cut -d ";" -f1 $1 | grep -c -w $2)
	#echo $A
	if [ $A == '0' ];
	then
		B=$(cut -d ";" -f1 $1 | grep -c -w 0)
		if [ $B == '0' ];
		then
			echo False
		else
			D=$(grep -n -w 0 $1 | head -1 | cut -d ":" -f1)
			sed -i "$D"'s/^0/'"$2"'/1' $1
			echo $(grep -w $2 $1 | head -1)
			
		fi
	else
		echo $(grep -w $2 $1 | head -1)
		#C=$(grep -n -w $2 $1 | head -1 | cut -d ":" -f1)
		#sed -i -e "$C"'d' $1
	fi

)9>>$1
